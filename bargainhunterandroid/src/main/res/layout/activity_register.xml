<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.bargainhunter.bargainhunterandroid.ui.activities.RegisterActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstNameEditText" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:hint="@string/first_name"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/lastNameEditText"
            android:layout_below="@+id/firstNameEditText" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:hint="@string/last_name"
            android:layout_alignRight="@+id/firstNameEditText" android:layout_alignEnd="@+id/firstNameEditText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailEditText" android:layout_below="@+id/lastNameEditText"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:hint="@string/prompt_email" android:layout_alignRight="@+id/lastNameEditText"
            android:layout_alignEnd="@+id/lastNameEditText"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:inputType="textEmailAddress" android:ems="10" android:id="@+id/usernameEditText"
              android:hint="@string/username" android:layout_below="@+id/emailEditText"
              android:layout_alignRight="@+id/emailEditText" android:layout_alignEnd="@+id/emailEditText"
              android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:inputType="textEmailAddress" android:ems="10" android:id="@+id/passwordEditText"
              android:hint="@string/password"
              android:layout_below="@+id/usernameEditText" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_alignRight="@+id/usernameEditText"
              android:layout_alignEnd="@+id/usernameEditText"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/promt_register"
            android:id="@+id/registerButton"
            android:layout_marginTop="84dp" android:layout_below="@+id/passwordEditText"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/passwordEditText" android:layout_alignEnd="@+id/passwordEditText"/>
</RelativeLayout>
