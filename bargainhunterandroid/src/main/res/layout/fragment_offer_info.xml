<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:fillViewport="false" android:id="@+id/scrollView">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/LightGrey" >

                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/abc_action_bar_stacked_max_height"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:gravity="center"
                                android:text="Offer Title"
                                android:id="@+id/titleLabel"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/title_back"
                                android:textColor="@color/Ivory"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="5dp"/>
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:gravity="center"
                                android:id="@+id/titleView"
                                android:background="@drawable/rounded_corner"
                                android:layout_below="@+id/titleLabel"
                                android:layout_margin="5dp"/>
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/abc_action_bar_stacked_max_height"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:gravity="center"
                                android:text="Offer Description"
                                android:id="@+id/descriptionLabel"
                                android:layout_gravity="center"
                                android:background="@drawable/title_back"
                                android:textColor="@color/Ivory"
                                android:layout_below="@+id/titleView"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/descriptionView"
                                android:background="@drawable/rounded_corner"
                                android:layout_below="@+id/descriptionLabel"
                                android:layout_margin="5dp"/>

                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/abc_action_bar_stacked_max_height"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:gravity="center"
                                android:id="@+id/priceLabel"
                                android:text="Price"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/title_back"
                                android:textColor="@color/Ivory"
                                android:layout_below="@+id/descriptionView"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>
                        <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/priceView"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/rounded_corner"
                                android:layout_below="@+id/priceLabel"
                                android:layout_margin="5dp"/>

                </RelativeLayout>
        </LinearLayout>
</ScrollView>